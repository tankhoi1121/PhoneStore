@model  PhoneStore.Models.Order
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    @Styles.Render(@"~/Content/Studio/Detail.css")
    
</head>
<body>
    <div class="new_class">
        <div class="Product" id="product_display">

        </div>
        
            @using (Html.BeginForm("Buy", "Studio", FormMethod.Post, new { @class = "Info"}))
            {
                <table>
                    <tr>
                        <th>Full Name</th>
                        <td>@Html.TextBoxFor(m => m.FullName, new { @class = "input-user" })</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>@Html.TextBoxFor(m => m.Address, new { @class = "input-user" })</td>
                    </tr>
                    <tr>
                        <th>Phone</th>
                        <td>@Html.TextBoxFor(m => m.Phone, new { @class = "input-user" })</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>@Html.TextBoxFor(m => m.Email, new { @class = "input-user" })</td>
                    </tr>
                    <tr>
                        <th>Product</th>
                        <td>@Html.TextBoxFor(m => m.Product, new { @class = "input-user" })</td>

                    </tr>
                    <tr>
                        <td></td>
                        <td><input type="submit" name="Submit" value="Order" /></td>
                    </tr>
                </table>
            }
        
        
        @*<div class="order" id="orderbutton">Order</div>*@
    </div>
    <script>
        var product_obj = document.getElementById("product_display");
        var url = "@ViewData["path"]";
        console.log(url);
        product_obj.style.width = 80;
        product_obj.style.height = 80;
        product_obj.style.backgroundImage = "url(" + url + ")";
